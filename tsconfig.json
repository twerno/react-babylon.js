{
    "compilerOptions": {
        "outDir": "ts-build",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es2016",
        "jsx": "react",
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "typeRoots": [
            "node_modules/@types",
            "node_modules/babylonjs-materials",
            "node_modules/babylonjs"
        ]
    }
}